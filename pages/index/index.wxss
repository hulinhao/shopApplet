#wrap {
  position: relative;
  -webkit-perspective: 600px;
  border: 1px black solid;
  left: 50%;
}
   
#head {
  width: 100%;
  height: 100%;
  position: absolute;
  margin-top: 150px;
  -webkit-transform-style: preserve-3d;
  -webkit-animation: donghua 5s linear 0s infinite;
  border: 1px blueviolet solid
}
   
#head div {
  position: absolute;
  top: 0;
  left: 0;
  width: 200px;
  height: 200px;
  text-align: center;
  line-height: 200px;
}
   
#head div:nth-child(1) {
  -webkit-transform: rotateY(0deg) translateZ(200px);
  background-size: cover;
}
   
#head div:nth-child(2) {
  -webkit-transform: rotateY(60deg) translateZ(300px);
  background-size: cover;
}
   
#head div:nth-child(3) {
  -webkit-transform: rotateY(120deg) translateZ(200px);
  background-size: cover;
}
   
#head div:nth-child(4) {
  -webkit-transform: rotateY(180deg) translateZ(300px);
  background-size: cover;
}
   
#head div:nth-child(5) {
  -webkit-transform: rotateY(240deg) translateZ(200px);
  background-size: cover;
}

#head div:nth-child(6) {
  -webkit-transform: rotateY(300deg) translateZ(200px);
  background-size: cover;
}
   
@-webkit-keyframes donghua {
  0% {
   transform: rotateX(5deg) rotateY(360deg);
  }
   
  50% {
   transform: rotateX(-5deg) rotateY(180deg);
  }
   
  100% {
   transform: rotateX(5deg) rotateY(0deg);
  }
}